<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@android:color/transparent"
            android:gravity="center_vertical|left|start"
            android:text="Task's name" />

        <ImageButton
            android:id="@+id/imageButtonAssignedUsers"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_users" />

        <TextView
            android:id="@+id/textViewAssignedUsers"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_vertical|left|start"
            android:text="4" />

        <ImageButton
            android:id="@+id/imageButtonMessages"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_message" />

        <TextView
            android:id="@+id/textViewMessages"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left|start"
            android:layout_weight="0.5"
            android:text="5" />

        <ImageButton
            android:id="@+id/imageButtonCommits"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_commit" />

        <TextView
            android:id="@+id/textViewCommits"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left|start"
            android:layout_weight="0.5"
            android:text="10" />

        <ImageButton
            android:id="@+id/imageButtonAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_add" />


    </LinearLayout>

</LinearLayout>
